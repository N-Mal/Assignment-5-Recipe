<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableRow>
        <ImageView
            android:id="@+id/imgPizza"
            android:contentDescription="@string/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            android:src="@drawable/pizza"
            android:padding="15sp" />
        <TextView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:text="@string/txtPizza"
            android:textSize="30sp"/>
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/imgChocoCake"
            android:contentDescription="@string/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            android:src="@drawable/chocolatecake"
            android:padding="15sp" />
        <TextView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:text="@string/txtChocoCake"
            android:textSize="30sp"/>
    </TableRow>

    <TableRow>
        <ImageView
            android:id="@+id/imgTacos"
            android:contentDescription="@string/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            android:src="@drawable/tacos"
            android:padding="15sp" />
        <TextView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:text="@string/txtTacos"
            android:textSize="30sp"/>
    </TableRow>

</TableLayout>